@{
    ViewBag.Title = "查看包含消防部门、使用单位和维护公司超管账号注册详情";
}

@using EHECD.FirePatrolInspection.Entity
@model EHECD_Unit

<table class="gridtable">
	<tr>
        <td style="width: 80px">申请账号：</td>
        <td>
			@Model.sPhone
		</td>
    </tr>
	<tr>
        <td style="width: 80px">单位名称：</td>
        <td>
			@Model.sName
		</td>
    </tr>
	<tr>
        <td style="width: 80px">单位地址：</td>
        <td>
			@Model.sAddress
		</td>
    </tr>
	<tr>
        <td style="width: 80px">平台管理员：</td>
        <td>
			@Model.sAdminName
		</td>
    </tr>
	<tr>
        <td style="width: 80px">联系电话：</td>
        <td>
			@Model.sContact
		</td>
    </tr>
	<tr>
        <td style="width: 80px">证件照：</td>
        <td>
            @if (Model.sCredentials.Length > 0)
            {
                var imgs = Model.sCredentials.Split(',');
                foreach (string img in imgs)
                {
                    <img src="@img" onclick="test('@img');" style="width: 300px" />
                }
            }
            else
            {
                <span>-</span>
            }
		</td>
    </tr>
</table>

<div id="win" class="easyui-window" title="查看大图" closed="true" style="width: 100%; height: 100%"
     data-options="iconCls:'icon-save',modal:true,collapsible:false,minimizable:false,maximizable:false,maximized:true">
    <div style="display: block; width: 100%; height: 100%; text-align: center">
        <img src="" style="height: 100%; display: block" />
    </div>
</div>

<script>
    function test(src) {
        $("#win img").attr("src", src);
        $("#win").window('open');
    }
</script>