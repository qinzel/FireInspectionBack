@{
    ViewBag.Title = "打印二维码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using EHECD.FirePatrolInspection.Entity
@model List<EHECD_Device>
<div>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <table style="display:inline-block">
                <tr>
                    <td style="text-align: center"><img style="margin: 5px 10px; width: 180px" src="@item.sQRCode" /></td>
                </tr>
                <tr>
                    <td style="text-align: center; font-size: 20px; font-weight: bold;">@item.sNumber</td>
                </tr>
                <tr>
                    <td style="text-align: center; font-size: 20px; font-weight: bold;">乐消消防管理系统</td>
                </tr>
            </table>
        }
    }
</div>
<script>
    window.print();
    setTimeout(function () {
        window.close();
    }, 200);
</script>